{
  "name": "@mybudget/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "MyBudget backend API - Node.js + Express + PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "seed:demo": "tsx ../../demo/seed.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch --runInBand",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --runInBand"
  },
  "dependencies": {
    "@mybudget/shared": "*",
    "@prisma/client": "^5.8.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^5.8.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}